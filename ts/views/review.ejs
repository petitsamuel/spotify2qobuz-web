<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review Unmatched</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-gray-900 text-gray-100 min-h-screen">
    <nav class="bg-gray-800 border-b border-gray-700">
        <div class="max-w-6xl mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <a href="/" class="text-xl font-bold text-white hover:text-blue-400">Spotify -> Qobuz</a>
                <div class="flex gap-4">
                    <a href="/" class="text-gray-300 hover:text-white">Home</a>
                    <a href="/playlists" class="text-gray-300 hover:text-white">Playlists</a>
                    <a href="/compare" class="text-gray-300 hover:text-white">Compare</a>
                    <a href="/history" class="text-gray-300 hover:text-white">History</a>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 py-8" x-data="reviewApp()" x-init="loadUnmatched()">
        <h1 class="text-2xl font-bold mb-6">Review Unmatched Tracks</h1>

        <div x-show="loading" class="text-center py-8">
            <div class="w-8 h-8 border-2 border-blue-500 border-t-transparent rounded-full animate-spin mx-auto"></div>
            <p class="mt-2 text-gray-400">Loading...</p>
        </div>

        <div x-show="!loading && tracks.length > 0" class="space-y-4">
            <p class="text-gray-400">Found <span x-text="total" class="text-white font-semibold"></span> unmatched tracks</p>

            <div class="bg-gray-800 rounded-lg border border-gray-700">
                <template x-for="track in tracks" :key="track.spotify_id">
                    <div class="p-4 border-b border-gray-700 last:border-b-0">
                        <div class="flex items-center justify-between mb-2">
                            <div>
                                <span class="font-medium" x-text="track.title"></span>
                                <span class="text-gray-400"> by </span>
                                <span class="text-gray-300" x-text="track.artist"></span>
                                <span x-show="track.album" class="text-gray-500 text-sm ml-2" x-text="'(' + track.album + ')'"></span>
                            </div>
                            <button @click="dismiss(track)" class="text-gray-500 hover:text-red-400 text-sm">Dismiss</button>
                        </div>
                        <div x-show="track.suggestions && track.suggestions.length > 0" class="ml-4 space-y-2 mt-2">
                            <p class="text-xs text-gray-500">Suggestions:</p>
                            <template x-for="sug in track.suggestions" :key="sug.qobuz_id">
                                <div class="flex items-center justify-between bg-gray-700/30 rounded p-2">
                                    <div class="flex-1">
                                        <span class="text-white" x-text="sug.title"></span>
                                        <span class="text-gray-400"> by </span>
                                        <span class="text-gray-300" x-text="sug.artist"></span>
                                        <span class="ml-2 px-1.5 py-0.5 rounded text-xs"
                                              :class="sug.score >= 70 ? 'bg-green-600/30 text-green-400' : 'bg-yellow-600/30 text-yellow-400'"
                                              x-text="sug.score + '%'"></span>
                                    </div>
                                    <button @click="approve(track, sug)"
                                            class="ml-2 px-3 py-1 bg-green-600 hover:bg-green-500 rounded text-sm">
                                        Add
                                    </button>
                                </div>
                            </template>
                        </div>
                        <div x-show="!track.suggestions || track.suggestions.length === 0" class="ml-4 text-sm text-gray-500">
                            No suggestions available
                        </div>
                    </div>
                </template>
            </div>
        </div>

        <div x-show="!loading && tracks.length === 0" class="bg-gray-800 rounded-lg p-8 text-center border border-gray-700">
            <div class="text-4xl mb-4">&#10003;</div>
            <p class="text-gray-400">All tracks have been matched or reviewed!</p>
            <a href="/" class="inline-block mt-4 px-4 py-2 bg-blue-600 hover:bg-blue-500 rounded-lg">Back to Home</a>
        </div>
    </main>

    <script>
    function reviewApp() {
        return {
            loading: true,
            tracks: [],
            total: 0,
            async loadUnmatched() {
                try {
                    const res = await fetch('/api/unmatched?status=pending&limit=50');
                    if (res.ok) {
                        const data = await res.json();
                        this.tracks = data.tracks || [];
                        this.total = data.total || 0;
                    }
                } catch (e) { console.error(e); }
                this.loading = false;
            },
            async approve(track, suggestion) {
                try {
                    const formData = new FormData();
                    formData.append('qobuz_id', suggestion.qobuz_id);
                    formData.append('spotify_id', track.spotify_id);
                    const res = await fetch('/api/qobuz/favorite', { method: 'POST', body: formData });
                    if (res.ok) {
                        this.tracks = this.tracks.filter(t => t.spotify_id !== track.spotify_id);
                        this.total--;
                    }
                } catch (e) { console.error(e); alert('Failed to add track'); }
            },
            async dismiss(track) {
                try {
                    await fetch('/api/unmatched/' + track.spotify_id + '/dismiss?sync_type=favorites', { method: 'POST' });
                    this.tracks = this.tracks.filter(t => t.spotify_id !== track.spotify_id);
                    this.total--;
                } catch (e) { console.error(e); }
            }
        };
    }
    </script>
</body>
</html>
